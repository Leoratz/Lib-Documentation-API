{
  "name": "@leoratz/lib-documentation-api",
  "version": "1.0.0",
  "description": "Analyse an Express or Fastify API and generate an OpenAPI spec automatically.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
