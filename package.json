{
  "name": "@leoratz/lib-documentation-api",
  "version": "1.0.0",
  "description": "Analyse an Express or Fastify API and generate an OpenAPI spec automatically.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format:check": "prettier --check .",
    "test": "vitest run", 
    "example": "tsx examples/example.ts"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "express": "^5.1.0",
    "openapi3-ts": "^4.5.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "bin": {
    "generate-openapi": "./bin/generate-openapi.js"
  }
}
